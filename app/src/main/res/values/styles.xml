<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="itemNewsBase">
        <item name="android:paddingTop">@dimen/itemNewsBasePaddingTop</item>
        <item name="android:paddingLeft">@dimen/itemNewsBasePaddingLeft</item>
        <item name="android:paddingRight">@dimen/itemNewsBasePaddingRight</item>
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="itemNewsBase.date" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseDateTextSize</item>
    </style>

    <style name="itemNewsBase.title" parent="itemNewsBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/itemNewsBaseTitleTextSize</item>
    </style>

    <style name="itemNewsBase.text" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseTxtTextSize</item>
        <item name="android:paddingTop">@dimen/itemNewsTextPaddingTop</item>
    </style>

    <style name="itemNewsBase.type" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseTypeTextSize</item>
        <item name="android:paddingTop">@dimen/itemNewsTypePaddingTop</item>
    </style>


    <style name="itemNewsBasePanel" parent="itemNewsBase">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="itemNewsPanelLikeBtn" >
        <item name="android:paddingRight">@dimen/itemNewsPanelPaddingRight</item>
    </style>

    <style name="itemNewsPanelDislikeBtn" >
        <item name="android:paddingRight">@dimen/itemNewsPanelPaddingRight</item>
    </style>

    <style name="itemNewsPanelLikes" >
        <item name="android:textSize">@dimen/itemNewsBaseLikesTextSize</item>
        <item name="android:paddingRight">@dimen/itemNewsPanelPaddingRight</item>
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="itemNewsPanelComment" >
        <item name="android:textSize">@dimen/itemNewsBaseCommentTextSize</item>
        <item name="android:paddingRight">@dimen/itemNewsPanelPaddingRight</item>
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="itemNewsPanelScore" >
        <item name="android:textSize">@dimen/itemNewsBaseScoreTextSize</item>
        <item name="android:paddingRight">@dimen/itemNewsPanelPaddingRight</item>
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="buttonTryAgain" >

    </style>

    <style name="itemEventBase">
        <item name="android:paddingTop">@dimen/itemNewsBasePaddingTop</item>
        <item name="android:paddingLeft">@dimen/itemNewsBasePaddingLeft</item>
        <item name="android:paddingRight">@dimen/itemNewsBasePaddingRight</item>
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="itemEventBase.start" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseDateTextSize</item>
    </style>

    <style name="itemEventBase.end" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseDateTextSize</item>
    </style>

    <style name="itemEventBaseDivider">
        <item name="android:textColor">@color/colorTextItemNews</item>
    </style>

    <style name="itemEventBase.text" parent="itemNewsBase">
        <item name="android:textSize">@dimen/itemNewsBaseTxtTextSize</item>
        <item name="android:paddingTop">@dimen/itemNewsTextPaddingTop</item>
        <item name="android:paddingBottom">@dimen/itemNewsTextPaddingBottom</item>
    </style>

    <style name="itemEventBase.title" parent="itemEventBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/itemNewsBaseTitleTextSize</item>
    </style>

    <style name="eventSearch">
        <item name="android:paddingTop">@dimen/searchEventsPaddingTop</item>
        <item name="android:paddingLeft">@dimen/searchEventsPaddingLeft</item>
        <item name="android:paddingRight">@dimen/searchEventsPaddingRight</item>
        <item name="android:textColor">@color/colorTextSearchEvents</item>
    </style>

    <style name="eventSearch.start" parent="eventSearch">
        <item name="android:textSize">@dimen/searchEventsStartTextSize</item>
    </style>

    <style name="eventSearch.end" parent="eventSearch">
        <item name="android:textSize">@dimen/searchEventsStartTextSize</item>
    </style>

    <style name="eventSearch.specializations" parent="eventSearch">
        <item name="android:textSize">@dimen/searchEventsSpecializations</item>
    </style>

    <style name="eventSearch.location" parent="eventSearch">
        <item name="android:textSize">@dimen/searchEventsLocation</item>
    </style>

    <style name="eventSearch.filterBtn">
        <item name="android:textSize">@dimen/searchEventsFilterBtn</item>
        <item name="android:textColor">@color/colorTextSearchEvents</item>
    </style>

    <style name="eventSearchLayout">
        <item name="android:layout_marginTop">@dimen/searchEventsLayoutTop</item>
    </style>

