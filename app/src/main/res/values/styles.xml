    <style name="eventSearchSearchLineLayout" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorTextSearchEvents</item>
    </style>

    <style name="eventSearchSearchLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorTextSearchEvents</item>
        <item name="colorControlActivated">@color/colorTextSearchEvents</item>
    </style>

